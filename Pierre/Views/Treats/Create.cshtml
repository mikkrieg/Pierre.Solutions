@{
  Layout = "_Layout";
}

@using Pierre.Models
@model Pierre.Models.Treat

<h1 class="text-center">Create Treat</h1>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class="form-control", @required="required"})

  @Html.LabelFor(model => model.Amount)
  @Html.TextBoxFor(model => model.Amount, new { @class="form-control", @required="required", @type="number", @min="1"})
  
  <input type="submit" value="Create" class="btn btn-success"/>
}

<button class="btn btn-dark">@Html.ActionLink("Back to home", "Index")</button>