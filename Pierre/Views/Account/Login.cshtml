@{
  Layout = "_Layout";
}

@using Pierre.ViewModels

@model LoginViewModel

<h2>Log in with your account</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)

    <input type="submit" value="Log in" class="btn btn-success" />
}
<p>Don't have an account?</p>
<button class="btn btn-success">@Html.ActionLink("Make one", "Register", "Account")</button>
<button class="btn btn-dark">@Html.ActionLink("Back to list", "Index", "Treats")</button>
<button class="btn btn-dark">@Html.ActionLink("Back to account home", "Index", "Account")</button>
