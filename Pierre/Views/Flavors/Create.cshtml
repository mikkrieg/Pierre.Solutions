@{
  Layout = "_Layout";
}
@using Pierre.Models
@model Pierre.Models.Flavor

<h1 class="text-center">Create a Flavor</h1>
    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name, new { @class="form-control", @required="required" })

      @Html.LabelFor(model => model.FlavorProfile)
      @Html.DropDownListFor(model => model.FlavorProfile,  new SelectList(Enum.GetValues(typeof(Profile))), "Select Flavor Profile", new { @class="form-control", @required="required"})

      <input type="submit" value="Create" class="btn btn-success"/>
    }

<button class="btn btn-dark">@Html.ActionLink("Back to home", "Index", "Treats")</button>